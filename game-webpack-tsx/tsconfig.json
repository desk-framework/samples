{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "jsxFactory": "JSX",
    "types": ["node"],
    "paths": { "~/*": ["./src/*"] }
  }
}
